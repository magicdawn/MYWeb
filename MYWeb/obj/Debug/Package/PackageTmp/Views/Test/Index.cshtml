@using DawnBlog.Web.Code
@using Magicdawn
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<pre class="prettyprint linenums">
@("DateTime.Now:".PadRight(20) + DateTime.Now.ToStringX())
<br />
@("DateTime.UtcNow:".PadRight(20) + DateTime.UtcNow.ToStringX())
<br />
@{
    var file = new System.IO.FileInfo(ThunderHelper.XmlDataPath);
}
@("LastWriteTime:".PadRight(20) + file.LastWriteTime.ToStringX())
<br />
@("LastWriteTimeUtc:".PadRight(20) + file.LastWriteTimeUtc.ToStringX())
</pre>